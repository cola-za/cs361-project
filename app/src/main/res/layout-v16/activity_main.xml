<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">




    <!-- VideoView for background -->
    <VideoView
        android:id="@+id/videoView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
       />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Game Title Text -->
        <TextView
            android:id="@+id/highScoreTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_left_lang"
            android:fontFamily="@font/font_harry_potter"
            android:text="@string/high_score"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_score"
            android:layout_gravity="end"
            android:layout_marginRight="@dimen/margin_left_lang"
            />

        <TextView
            android:id="@+id/gameTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_game"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:fontFamily="@font/font_harry_potter"
            android:layout_gravity="center"
             />

        <TextView
            android:id="@+id/play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_harry_potter"
            android:text="@string/play"
            android:textColor="@color/white"
            android:textSize="@dimen/texts_ize_play"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingRight="@dimen/margin_left_lang"
            android:paddingLeft="@dimen/margin_left_lang">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_level"
                    android:fontFamily="@font/font_harry_potter"
                    android:text="@string/chang_lang"
                    android:textColor="@color/black"
                    android:padding="@dimen/padding_lang"
                    android:textSize="@dimen/text_size_lang" />

                <Button
                    android:id="@+id/btn_sound_settings"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/margin_left_lang"
                    android:background="@drawable/bg_level"
                    android:fontFamily="@font/font_harry_potter"
                    android:text="@string/sound_set"
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/margin_left_lang"
                    android:padding="@dimen/padding_lang"
                    android:textSize="@dimen/text_level" />
            </LinearLayout>


            <TextView
                android:id="@+id/rule"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/torsilpi"
                android:text="@string/rule"
                android:textColor="@color/white"
                android:textSize="@dimen/size_rule"
                android:gravity="end|center"/>

        </LinearLayout>

    </LinearLayout>



    <!-- High Score Text -->


    <!-- Play Text Button -->


    <!-- Rule Text centered in the layout -->


</RelativeLayout>
